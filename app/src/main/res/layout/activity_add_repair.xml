<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_activity"
    android:orientation="vertical">

    <include layout="@layout/inclule_title" />

    <LinearLayout
        android:id="@+id/layou_addPhoto"
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:background="@color/drawable_circle"
        android:gravity="center"
        android:onClick="onClick"
        android:orientation="vertical"
        android:padding="50dp">

        <com.ppbike.view.IconView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="&#xe601;"
            android:textColor="@color/icon_back"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="添加修车铺图片"
            android:textColor="@color/text_add"
            android:textSize="@dimen/pt15" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:background="@color/background_layout"
        android:gravity="center_vertical"
        android:paddingBottom="3dp"
        android:paddingLeft="15dp"
        android:paddingTop="3dp"
        android:text="修车店信息"
        android:textColor="@color/text_hit"
        android:textSize="@dimen/pt10" />

    <LinearLayout
        android:id="@+id/layout_address"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="2dp"
        android:background="@color/background_layout"
        android:gravity="center_vertical"
        android:onClick="onClick"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="修车地址"
            android:textColor="@color/text_menu"
            android:textSize="@dimen/pt17" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:hint="定位中"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/text_menu"
            android:textColorHint="@color/text_hit"
            android:textSize="@dimen/pt15" />

        <com.ppbike.view.IconView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="&#xe604;"
            android:textColor="@color/icon_title"
            android:textSize="@dimen/pt17" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_link"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="2dp"
        android:background="@color/background_layout"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="修车摊主"
            android:textColor="@color/text_menu"
            android:textSize="@dimen/pt17" />

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:inputType="phone"
            android:background="@android:color/transparent"
            android:gravity="center_vertical|left"
            android:hint="请输入摊主称呼（选填）"
            android:textColor="@color/text_menu"
            android:textColorHint="@color/text_hit"
            android:textSize="@dimen/pt15" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_name"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="2dp"
        android:background="@color/background_layout"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="修车摊主"
            android:textColor="@color/text_menu"
            android:textSize="@dimen/pt17" />

        <EditText
            android:id="@+id/edit_link"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:background="@android:color/transparent"
            android:gravity="center_vertical|left"
            android:hint="请输入联系方式（选填）"
            android:textColor="@color/text_menu"
            android:textColorHint="@color/text_hit"
            android:textSize="@dimen/pt15" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_upload"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_button_background_selector"
        android:onClick="onClick"
        android:text="上传"
        android:textColor="@color/text_menu"
        android:textSize="@dimen/pt17" />
</LinearLayout>